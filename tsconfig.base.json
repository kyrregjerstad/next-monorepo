{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "target": "es6",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "rootDir": ".",
    "paths": {
      "@web/*": ["./next/src/*"],
      "@api/*": ["./api/src/*"]
    }
  }
}
